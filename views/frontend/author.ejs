<!-- post-container -->
<div class="post-container">
    <h2 class="page-heading">
        <%= author.fullname%>
    </h2>

    <% if(articlesByAuthor || articlesByAuthor.length>0){ %>
        <% articlesByAuthor.forEach(article=> { %>
            <div class="post-content">
                <div class="row">
                    <div class="col-md-4">
                        <a class="post-img" href="/single/<%= article._id  %>"><img src="/uploads/<%= article.image %>"
                                alt="" /></a>
                    </div>
                    <div class="col-md-8">
                        <div class="inner-content clearfix">
                            <h3><a href="/single/<%= article._id  %>">
                                    <%= article.title %>
                                </a></h3>
                            <div class="post-information">
                                <span>
                                    <i class="fa fa-tags" aria-hidden="true"></i>
                                    <a href='/category/<%= article.category.slug %>'>
                                        <%= article.category.name %>
                                    </a>
                                </span>
                                <span>
                                    <i class="fa fa-user" aria-hidden="true"></i>
                                    <a href='/author/<%=author._id %>'>
                                        <%=author.fullname %>
                                    </a>
                                </span>
                                <span>
                                    <i class="fa fa-calendar" aria-hidden="true"></i>
                                    <%= new Date(article.createdAt).toLocaleDateString('en-GB') %>
                                </span>
                            </div>
                            <p class="description">
                                <%- article.content.slice(0,200)+"..." %>
                            </p>
                            <a class='read-more pull-right' href="/single/<%= article._id  %>">read more</a>
                        </div>
                    </div>
                </div>
            </div>
            <% }); %>
                <% } %>
                    <nav>
                        <ul class="pagination">
                            <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
                                <a class="page-link" href="?page=<%= currentPage - 1 %>">Previous</a>
                            </li>
                            <% for(let i=1; i <=totalPages; i++) { %>
                                <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                                    <a class="page-link" href="?page=<%= i %>">
                                        <%= i %>
                                    </a>
                                </li>
                                <% } %>
                                    <li class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
                                        <a class="page-link" href="?page=<%= currentPage + 1 %>">Next</a>
                                    </li>
                        </ul>
                    </nav>
</div>
<!-- /post-container -->