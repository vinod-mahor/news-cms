<div id="admin-content">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1 class="admin-heading">Update Article</h1>
            </div>
            <div class="col-md-8 mx-auto">
                <div class="card">
                    <h5 class="card-header">Update Article</h5>
                    <div class="card-body">
                        <!-- Form -->
                        <form action="/admin/update-article/<%= article._id %>" method="POST" enctype="multipart/form-data">
                            <div class="mb-3">
                                <label for="article_title" class="form-label">Title</label>
                                <input type="text" value="<%= article.title %>" name="title" id="article_title"
                                    class="form-control" autocomplete="off" required>
                            </div>
                            <div class="mb-3">
                                <label for="summernote" class="form-label">Description</label>
                                <textarea name="content" id="summernote" class="form-control" rows="5"
                                    required><%= article.content %></textarea>
                            </div>
                            <div class="mb-3">
                                <label for="article_category" class="form-label">Category</label>
                                <select name="category" id="article_category" class="form-control">
                                    <% allCategories.forEach(category=> { %>
                                        <option value="<%= category._id %>" <%=article.category._id===category._id
                                            ? 'selected' : '' %>><%= category.name %>
                                        </option>
                                        <% }); %>
                                </select>
                            </div>
                            <div class="mb-3">
                                <label for="article_image" class="form-label">Article image</label>
                                <input type="file" name="image" id="article_image" class="form-control" >
                                <% if (article.image) { %>
                                    <div class="mt-2">
                                        <img src="/uploads/<%= article.image %>" alt="Current Image" style="max-width: 150px;">
                                    </div>
                                <% } %>
                            </div>
                            <input type="submit" name="submit" class="btn btn-primary" value="Update" />
                        </form>
                        <!--/Form -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<%- contentFor('summernoteHead') %>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/summernote@0.8.20/dist/summernote-lite.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- Summernote Lite JS -->
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.20/dist/summernote-lite.min.js"></script>
    <!-- <script src="js/summernote-bs5.js"></script> -->
    <script>
        $(document).ready(function () {
            $('#summernote').summernote({
                placeholder: 'Start typing...',
                tabsize: 2,
                height: 200
            });
        });
    </script>